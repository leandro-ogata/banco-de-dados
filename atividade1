5. PESQUISE A QUANTIDADE DE FUNCIONÁRIOS, O TOTAL DA FOLHA DE PAGAMENTO, O 
MENOR E MAIOR SALÁRIO E A MÉDIA SALARIAL
SELECT COUNT(*) AS 'QTDE',SUM(VL_SALARIO) AS 'SOMA',MIN(VL_SALARIO) AS 'MENOR',MAX(VL_SALARIO) AS 'MAIOR' FROM FUNCIONARIO

6. PESQUISE A QUANTIDADE DE DIAS VIVIDOS POR CADA FUNCIONÁRIO
SELECT NM_FUNCIONARIO,DT_ADMISSAO,DATEDIFF(DAY,DT_ADMISSAO,GETDATE()) AS 'DIAS A PARTIR DA ADMISSÃO' FROM FUNCIONARIO

7. EXIBA O ANO, MÊS E DIA SEPARADAMENTE DA DATA DE NASCIMENTO
SELECT YEAR(DT_ADMISSAO) AS 'ANO',MONTH(DT_ADMISSAO) AS 'MÊS',DAY(DT_ADMISSAO) AS 'DIA' FROM FUNCIONARIO

8.LISTE O NOME DO MÊS DA DATA DE NASCIMENTO DOS FUNCIONÁRIOS, PORÉM 
SOMENTE PARA AQUELES QUE TEM SALÁRIO MAIOR QUE 5000
-8.LISTE O NOME DO MÊS DA DATA DE NASCIMENTO DOS FUNCIONÁRIOS, PORÉM 
SOMENTE PARA AQUELES QUE TEM SALÁRIO MAIOR QUE 5000

9. QUAL A QUANTIDADE DE MULHERES CADASTRADAS?
SELECT COUNT(*) AS 'QTDE DE MULHERES' FROM FUNCIONARIO WHERE DS_SEXO='F'

10. INCULA UM ATRIBUTO CHAMADO IDADE
ALTER TABLE FUNCIONARIOS ADD IDADE INT

11. ALTERE OS DADOS DE IDADE DE CADA UM DOS FUNCIONÁRIOS CADASTRADOS
UPDATE FUNCIONARIO SET NR_TEMPO_TRABALHO = DATEDIFF(DAY,DT_ADMISSAO,GETDATE()) 

12. FOI DADO UM BONUS DE 800 PROS FUNCIONARIOS ADMITIDOS ANTES DE 2000
UPDATE FUNCIONARIO SET VL_SALARIO = VL_SALARIO + 800 WHERE YEAR(DT_ADMISSAO) < 2000

13. PARA O CADASTRO DE CPF TEMOS 11 POSIÇÕES E NÃO GRAVAMOS OS DADOS COM MÁSCARA. MONTE UMA EXIBIÇÃO DOS CPF COM A MÁSCARA
SELECT NM_FUNCIONARIO,NR_CPF,SUBSTRING(NR_CPF,1,3) + '.' + SUBSTRING(NR_CPF,4,3) + '.' + SUBSTRING(NR_CPF,7,3) + '-' + SUBSTRING(NR_CPF,10,2)  AS 'CPF COM MÁSCARA'
FROM FUNCIONARIO

14. QUEM SÃO OS FUNCIONÁRIOS QUE TEM MAIS DE 30 LETRAS EM SEU NOME?
SELECT NM_FUNCIONARIO FROM FUNCIONARIO WHERE LEN(NM_FUNCIONARIO) > 30 

15. MONTAR UMA PESQUISA PARA UM RELATÓRIO COM OS DADOS DAS MULHERES PRIMEIRO, DEPOIS OS HOMENS EM ORDEM ALFABÉTICA
SELECT NM_FUNCIONARIO,DS_SEXO,VL_SALARIO FROM FUNCIONARIO ORDER BY DS_SEXO,NM_FUNCIONARIO

16. EXIBIR O NOME DOS FUNCIONARIOS EM LETRAS MINUSCULAS
SELECT NM_FUNCIONARIO,LOWER(NM_FUNCIONARIO) AS 'LETRAS MINÚSCULAS' FROM FUNCIONARIO

17. COMO SABER QUAIS OS MAIORES SALÁRIOS ENTRE OS FUNCIONÁRIOS CADASTRADOS
SELECT NM_FUNCIONARIO,VL_SALARIO FROM FUNCIONARIO ORDER BY VL_SALARIO DESC

18. CASO O DISSIDIO DA CATEGORIA SEJA 5%, QUAL SERÁ O NOVO GASTO COM A FOLHA DE PAGAMENTO?
SELECT SUM(VL_SALARIO) AS 'GASTO SEM AUMENTO',SUM(VL_SALARIO * 1.05) AS 'NOVO GASTO COM A FOLHA DE PAGAMENTO' FROM FUNCIONARIO

19. CASO EXISTISSE A COLUNA NM_MES EM NOSSA TABELA COMO FARIAMOS PARA ELIMINA-LA DA TABELA
ALTER TABLE FUNCIONARIO DROP COLUMN NM_MES











